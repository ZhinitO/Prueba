
@model ProductoDTO

<h2>Nuevo Producto</h2>

<div style="margin:35px 200px;">
    <h2>Nuevo Producto</h2>
    <hr />
    <form method="post" action="@Url.Action("Nuevo", "Producto")">
        <div class="form-group">
            <label>Nombre:</label>
            @Html.TextBoxFor(x => x.Nombre, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label>Precio:</label>
            @Html.TextBoxFor(x => x.Precio, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label>Stock:</label>
            @Html.TextBoxFor(x => x.Stock, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label>Descripcion:</label>
            @Html.TextAreaFor(x => x.Descripcion, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label>Referencia:</label>
            @Html.TextBoxFor(x => x.Referencia, new { @class = "form-control" })
        </div>

        <div class="form-group">
            <input type="submit" value="Guardar" class="btn btn-success" />
        </div>
    </form>
</div>


